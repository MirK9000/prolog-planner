{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@planner/shared$": "<rootDir>/../packages/shared/src",
    "^@planner/serializer$": "<rootDir>/../packages/serializer/src"
  }
}
