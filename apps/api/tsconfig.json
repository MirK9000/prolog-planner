{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDirs": [
      "./src",
      "../../packages/shared/src",
      "../../packages/serializer/src",
      "../../packages/geometry/src",
      "../../packages/rules/src"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}

