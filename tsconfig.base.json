{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@planner/shared": [
        "packages/shared/dist",
        "packages/shared/src"
      ],
      "@planner/serializer": [
        "packages/serializer/dist",
        "packages/serializer/src"
      ],
      "@planner/geometry": [
        "packages/geometry/dist",
        "packages/geometry/src"
      ],
      "@planner/rules": [
        "packages/rules/dist",
        "packages/rules/src"
      ]
    }
  }
}
